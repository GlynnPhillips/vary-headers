{
  "name": "FT Headers",
  "manifest_version": 2,
  "version": "1.2",
  "description": "FT Headers",
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "*://*.ft.com/",
    "*://*.herokuapp.com/",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}
