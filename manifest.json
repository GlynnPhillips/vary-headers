{
  "name": "FT Headers",
  "manifest_version": 2,
  "version": "1.2",
  "description": "FT Headers",
  "icons": {
		"32": "icons/favicon-32x32.png",
		"194": "icons/favicon-194x194.png"
	},
  "permissions": [
    "activeTab",
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "*://*.ft.com/",
    "*://*.herokuapp.com/",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}
